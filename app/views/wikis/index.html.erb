<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="col-md-4">
			<h1>All Wikis</h1>
		</div>
		<div class="col-md-4 pull-right align-bottom new_wiki">
			<%= link_to "New Wiki", new_wiki_path, class: "btn btn-primary btn-lg" %>
		</div>
	</div>
</div>
<br />
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table">
			<div class="media">
				<div class="media-body">
					<% @wikis.each do |wiki| %>
						<% if wiki.private == false || (current_user ? current_user.admin? : nil) %>
							<tr>
								<td>
									<h4 class="media-heading">
									<%= link_to wiki.title, wiki %>
										<small>
											<% if wiki.private == true %>
											 	- <strong>Private</strong>
											<% end %>
											- Created <%= time_ago_in_words(wiki.updated_at) %> ago.
										</small>
									</h4>
									<small>Created by <% wiki.user %></small>
								</td>
								<td width="4rem">
									<% if current_user %>
										<%= link_to "Edit", edit_wiki_path(wiki), class: "btn btn-success" %>
									<% end %>
								</td>
							</tr>
						<% end %>
					<% end %>
				</div>
			</div>
		</table>
	</div>
</div>
<br>
<br>
