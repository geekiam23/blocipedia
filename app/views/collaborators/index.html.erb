
<div class="">
  <h3 class="text-center">Manage Collaborators:</h3>
  <h4>Wiki Title: <%= @wiki.title %></h4>
  <h4>Wiki Owner: <%= @wiki.user.email %></h4>
  <hr>
    <div class="row">
      <div class="col-md-8">
        <% @users.each do |user| %>
          <div class="row">
            <div class="col-md-4">
              <h4 class="media-heading">
                <%= @wiki.user.name %>
              </h4>
            </div>
            <div class="col-md-4">
              <% if @wiki.users.include?(user) %>
                <% collaborator = @wiki.collaborator_for(user) %>
                <%= link_to "Remove as collaborator", [@wiki, @collaborator], method: :delete, class: "btn btn-sm btn-danger" %>
                <br>
              <% else %>
                <%= link_to "Add as collaborator", wiki_collaborators_path( user_id: user.id), method: :post, class: "btn btn-sm btn-success" %>
                <br />
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
</div>
